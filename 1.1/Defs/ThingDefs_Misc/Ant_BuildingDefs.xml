<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--furniture-->
  <ThingDef ParentName="BuildingBase">
    <defName>AntSleepingSpot</defName>
    <label>ant sleeping spot</label>
    <description>What is this, a sleeping spot for ants!?! Not comfortable.</description>
    <thingClass>Building_Bed</thingClass>
    <rotatable>false</rotatable>
    <graphicData>
      <texPath>Things/Building/Misc/AnimalBed/AnimalSleepSpot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <statBases>
      <WorkToBuild>0</WorkToBuild>
      <Comfort>0.4</Comfort>
      <SurgerySuccessChanceFactor>0.7</SurgerySuccessChanceFactor>
    </statBases>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>False</useHitPoints>
    <size>(1,1)</size>
    <designationCategory>Furniture</designationCategory>
    <passability>Standable</passability>
    <drawGUIOverlay>True</drawGUIOverlay>
    <defaultPlacingRot>South</defaultPlacingRot>
    <building>
      <bed_showSleeperBody>True</bed_showSleeperBody>
      <sowTag>SupportPlantsOnly</sowTag>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
    <designationHotKey>Misc1</designationHotKey>
    <comps>
      <li Class="CompProperties_AssignableToPawn">
        <drawAssignmentOverlay>false</drawAssignmentOverlay>
        <compClass>CompAssignableToPawn_Bed</compClass>
      </li>
    </comps>
  </ThingDef>
  <ThingDef ParentName="BedWithQualityBase">
    <defName>AntSleepingAlcove</defName>
    <label>ant sleeping alcove</label>
    <description>A designated sleeping alcove</description>
    <graphicData>
      <texPath>Furniture/AntAlcoveTall/AntAlcoveTall</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1.6)</drawSize>
      <shaderType>CutoutComplex</shaderType>
      <damageData>
        <rect>(0.05,0.05,0.9,0.9)</rect>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>EndTable</li>
          <li>Dresser</li>
        </linkableFacilities>
      </li>
    </comps>
    <statBases>
      <MaxHitPoints>140</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Beauty>1</Beauty>
      <WorkToBuild>800</WorkToBuild>
      <Mass>50</Mass>
      <BedRestEffectiveness>1</BedRestEffectiveness>
      <Comfort>0.75</Comfort>
      <ImmunityGainSpeedFactor>1.07</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
    </statBases>
    <size>(1,1)</size>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>35</costStuffCount>
    <building>
      <bed_showSleeperBody>False</bed_showSleeperBody>
      <bed_healPerDay>4</bed_healPerDay>
    </building>
    <fillPercent>0.4</fillPercent>
    <pathCost>60</pathCost>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <castEdgeShadows>True</castEdgeShadows>
    <designationHotKey>Misc2</designationHotKey>
    <techLevel>Medieval</techLevel>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <uiIconScale>0.90</uiIconScale>
  </ThingDef>
  <ThingDef ParentName="BedWithQualityBase">
    <defName>AntFluffFortress</defName>
    <label>fortress of fluff</label>
    <description>A pillowy fortress of fluff. Comfy place for antinium to sleep.</description>
    <graphicData>
      <texPath>Furniture/FluffFortress/FluffFortress</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1.6)</drawSize>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <castEdgeShadows>True</castEdgeShadows>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToBuild>2800</WorkToBuild>
      <Mass>45</Mass>
      <Flammability>1.0</Flammability>
      <BedRestEffectiveness>1</BedRestEffectiveness>
      <Comfort>0.80</Comfort>
      <ImmunityGainSpeedFactor>1.11</ImmunityGainSpeedFactor>
      <MedicalTendQualityOffset>0.10</MedicalTendQualityOffset>
      <SurgerySuccessChanceFactor>1.1</SurgerySuccessChanceFactor>
    </statBases>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>EndTable</li>
          <li>Dresser</li>
        </linkableFacilities>
      </li>
    </comps>
    <size>(1,1)</size>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>
    <building>
      <bed_showSleeperBody>False</bed_showSleeperBody>
      <bed_healPerDay>10</bed_healPerDay>
    </building>
    <fillPercent>0.4</fillPercent>
    <pathCost>60</pathCost>
    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <designationHotKey>Misc5</designationHotKey>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <techLevel>Industrial</techLevel>
    <uiIconScale>0.90</uiIconScale>
  </ThingDef>
  <!--production-->
  <ThingDef ParentName="BuildingBase">
    <defName>Ant_RxlvnFermentingBarrel</defName>
    <label>rxlvn fermenting barrel</label>
    <description>A barrel for fermenting raw rxlvn into rxlvn.</description>
    <thingClass>AntiniumRaceCode.Building_RxlvnFermentingBarrel</thingClass>
    <rotatable>false</rotatable>
    <graphicData>
      <texPath>Things/Building/Production/RxlvnBarrel/RxlvnBarrel</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
        <rect>(0.05,0.1,0.9,0.9)</rect>
      </damageData>
      <shadowData>
        <volume>(0.75, 0.35, 0.33)</volume>
      </shadowData>
    </graphicData>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.45</fillPercent>
    <pathCost>60</pathCost>
    <thingCategories>
      <li>BuildingsProduction</li>
    </thingCategories>
    <statBases>
      <WorkToBuild>600</WorkToBuild>
      <Mass>10</Mass>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <costList>
      <Steel>10</Steel>
      <WoodLog>40</WoodLog>
    </costList>
    <comps>
      <li Class="CompProperties_TemperatureRuinable">
        <minSafeTemperature>-1</minSafeTemperature>
        <maxSafeTemperature>32</maxSafeTemperature>
        <progressPerDegreePerTick>0.00001</progressPerDegreePerTick>
      </li>
    </comps>
    <tickerType>Rare</tickerType>
    <designationCategory>Production</designationCategory>
    <constructEffect>ConstructWood</constructEffect>
    <researchPrerequisites>
      <li>Brewing</li>
    </researchPrerequisites>
  </ThingDef>
</Defs>